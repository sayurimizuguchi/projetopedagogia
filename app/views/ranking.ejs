<html lang="pt-br">
  <head>
    <meta charset="utf-8">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/bootstrap-responsive.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <title>Ranking</title>
  </head>
  <script>
    $(document).ready( function(){
        $('#btn_sair').click(function(){
					window.location.href = '/logout';
				});
				
				$('#btn_menu').click(function(){
					window.location.href = '/menu';
				});
		});
  </script>
    <body>
        <div class="navbar navbar-default navbar-static-top">
          <div class="container">
            <div class="navbar-header">
                <button class="btn btn-primary" id="btn_sair" style="background-color: #28a745;">Sair</button>
                <button class="btn" id="btn_menu">Menu</button>
            </div>
          </div>
        </div>
        <div class="section">
          <div class="container">
            <div class="row">
              <div align="center"></div>
              <div class="col-md-12" align="center"></div>
            </div>
          </div>
        </div>
        <div class="section">
          <div class="container">
            <div class="row">
              <div class="col-md-4" align="center">
                <img src="img/ranking_kids_teacher.png" class="img-responsive" width="300">
              </div>
              <div class="col-md-4" align="center">
                <h1>Ranking de Jogadores</h1>
                <i class="fa fa-5x fa-fw fa-table"></i>
              </div>
              <div class="col-md-4" align="center">
                <img src="img/ranking_kids_two.png" class="img-responsive" width="300">
              </div>
            </div>
          </div>
        </div>
        <div class="section">
          <div class="container">
            <div class="row">
              <div class="col-md-12">
                <table class="table table-hover table-striped">
                  <thead>
                    <tr>
                      <th>#</th>
                      <th>Jogador</th>
                      <th>Score</th>
                    </tr>
                  </thead>
    
                  <%for(i=0; i < data.length ; i++){%>
                  <tbody>
                           
                        <tr>
                          <td><%=i+1%></td>
                          <td><%=data[i].nome%></td>
                          <td><%=data[i].score%></td>
                        </tr>
    
                         <%}%>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
        <!-- Chosen-->
        <footer class="section section-primary">
          <div class="container">
            <div class="row">
              <div class="col-sm-6">
    
              </div>
              <div class="col-sm-6">
                <p class="text-info text-right">
                  <br>
                  <br>
                </p>
                </div>
                </div>
              </div>
            </div>
          </div>
        </footer>
    </body>
</html>