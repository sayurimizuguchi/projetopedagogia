<html>
	<head>
	    <link href="css/styleIndex.css" rel="stylesheet" type="text/css">
	    <title>Jogo de Português!</title>
	    <meta name="viewport" content="width=device-width, initial-scale=1.0">
	    <meta charset="UTF-8" />
	    <link rel="stylesheet" href="/css/bootstrap.min.css">
	    <link rel="stylesheet" href="/css/bootstrap-responsive.min.css">
	    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
        <script>
            $(document).ready( function(){

				$('#btn_cadastrase').click(function(){
					window.location.href = '/cadastro';
				});
			});
        </script>
	</head>
	<body>
		<br>
		<div id="main" class="container"> 
		
		<% if(validacao.length > 0) { %>
				<div class="row">
					<div class="col-md-12">
						<div class="alert alert-danger">
							<strong>Atenção!</strong>
							<ul>
									<% for(var i = 0; i < validacao.length; i++) { %>	
								<li><%= validacao[i].msg %></li>
									<% } %>	
							</ul>
						</div>
					</div>
				</div>
				<% } %>	
				
				<% if(validLogin.length > 0) { %>
				<div class="row">
					<div class="col-md-12">
						<div class="alert alert-danger">
							<strong>Atenção!</strong>
							<span><%=validLogin%></span>
						</div>
					</div>
				</div>
				<% } %>	

				<% if(dataFor.length > 0) { %>
				<div class="row">
					<div class="col-md-12">
						<div class="alert">
							<strong>Atenção!</strong>
							<ul>
									<% for(var i = 0; i < dataFor.length; i++) { %>	
								<li><%= dataFor[i].msg %></li>
									<% } %>	
							</ul>
						</div>
					</div>
				</div>
				<% } %>	
		<form name="loginform" id="loginform" action="/autenticar" method="post" class="wpl-track-me"> 
				<p class="login-username">
				<label for="user_login"></label> 
					<input type="text" name="login" id="user_login" class="input" placeholder="Usuario" value="" size="20" /> 
				</p> 
				<p class="login-password"> 
					<label for="user_pass"></label>
					<input type="password" name="senha" id="user_pass" class="input" placeholder="Senha" value="" size="20" /> 
				</p> 
				<p class="login-remember">
					<label><input name="rememberme" type="checkbox" id="rememberme" value="forever"> Remember Me</label>
				</p> 
				<p class="login-submit">
					<input type="submit" name="wp-submit" id="btn_login" class="button-primary" value="Entrar" /><input type="hidden" name="redirect_to" value="#"/>
				</p> 
		</form> 
			<button class="btn btn-success" id="btn_cadastrase">Cadastre-se</button> 
		</div>
	</body>
</html>