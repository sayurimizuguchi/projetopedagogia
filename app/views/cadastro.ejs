<html>
  <head>
    <title>Cadastro de Alunos</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="css/styleRegister.css" rel="stylesheet" type="text/css">
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/bootstrap-responsive.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
  </head>
      <script>
        $(document).ready( function(){
  				$('#btn_voltar').click(function(){
  					window.location.href = '/';
  				});
  			});
     </script>
      <body>
      <br><button id="btn_voltar" class="btn btn-info">Voltar</button><br><br>    
      <div id="main" class="container"> 
    
    	    	<% if(validacao.length > 0) { %>
    	    		<div class="alert alert-danger">
    	    			<strong>Atenção!</strong>
    	    			<ul>
    	    				<% for(var i = 0; i < validacao.length; i++) { %>
    	    					<li><%=validacao[i].msg%></li>
    	    				<% } %>
    	    			</ul>
    	    		</div>
    	    	<% } %>
    	    	
    	    	<% if(dataFor.length > 0) { %>
    		
    				<div class="row">
    					<div class="col-md-12">
    						<div class="alert alert-success">
    							<strong>Parabéns! Seja bem vindo ao nosso jogo!</strong>
    							<ul>
    								<li><%= dataFor %></li>
    						
    							</ul>
    						</div>
    					</div>
    				</div>
    				<% } %>	
        <form class="form-horizontal" method="post" action="/cadastrar">
        <fieldset>
        
        <div class="form-group">
          <label class="col-md-4 control-label" for="nome">Nome</label>  
          <div class="col-md-5">
          <input id="nome" name="nome" type="text" placeholder="Nome do usuário" class="form-control input-md">
            
          </div>
        </div>
        
        <div class="form-group">
          <label class="col-md-4 control-label" for="login">Usuário</label>  
          <div class="col-md-5">
          <input id="login" name="login" type="text" placeholder="Login do usuario" class="form-control input-md" >
            
          </div>
        </div>
        
        <div class="form-group">
          <label class="col-md-4 control-label" for="serie">Série</label>  
          <div class="col-md-5">
          <input id="serie" name="serie" type="text" placeholder="Serie" class="form-control input-md" >
            
          </div>
        </div>
        
        <div class="form-group">
          <label class="col-md-4 control-label" for="senha">Senha</label>
          <div class="col-md-5">
            <input id="senha" name="senha" type="password" placeholder="Digite a senha" class="form-control input-md" >
            
          </div>
        </div>
        
        
        <!-- Button (Double) -->
        <div class="form-group">
          <label class="col-md-4 control-label" for="idConfirmar"></label>
          <div class="col-md-8">
           <button type="submit" class="btn btn-primary" id="btn_confirmar">Confirmar</button>
          </div>
         </div>
        
        </fieldset>
        </form>
              
        </div>
      </body>
</html>
